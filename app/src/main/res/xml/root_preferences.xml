<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/privacy_title">

        <Preference
            app:title="@string/privacy_policy_title"
            app:key="@string/privacy_policy_key"/>

        <SeekBarPreference
            android:max="500"
            app:defaultValue="50"
            app:key="@string/radius_pref_key"
            app:seekBarIncrement="10"
            app:showSeekBarValue="true"
            app:summary="@string/radius_pref_summary"
            app:title="@string/radius_pref_title" />

        <EditTextPreference
            app:key="@string/alias_pref_key"
            app:title="@string/alias_pref_title"
            android:dialogTitle="@string/alias_dialog_title"
            />

        <Preference
            app:key="@string/delete_remote_key"
            app:title="@string/delete_remote_title" />



    </PreferenceCategory>

    <PreferenceCategory app:title="@string/storage_title">
        <Preference
            app:key="@string/delete_local_key"
            app:title="@string/delete_local_title" />


    </PreferenceCategory>

    <PreferenceCategory app:title="@string/contact_title">

        <Preference
            app:key="@string/website_pref_key"
            app:summary="@string/website_pref_text"
            app:title="@string/website_pref_title"/>

        <Preference
            app:key="@string/email_key"
            app:summary="@string/email_address"
            app:title="@string/email_pref_title" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/acknowledgements_title">
        <Preference
            app:key="@string/cybera_key"
            app:summary="@string/cybera_text"
            app:title="@string/cybera_title" />
        <Preference
            app:key="@string/tforest_key"
            app:summary="@string/tforest_text"
            app:title="@string/tforest_title" />
        <Preference
            app:key="@string/osm_key"
            app:summary="@string/osm_text"
            app:title="@string/osm_title" />
        <Preference
            app:key="@string/nserc_key"
            app:summary="@string/nserc_text"
            app:title="@string/nserc_title" />
    </PreferenceCategory>


</PreferenceScreen>